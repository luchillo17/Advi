<div id="signup-container">
  <h3 class="advi-logo"><%= link_to_with_locale "ADVI", root_path %></h3>

  <div class="card">
    <div class="card-content">

      <span class="card-title"><%= t('.sign_up') %></span>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>
              <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
            </em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete:
        "new-password" %>
        </div>

        <%= f.button type: :submit, class: 'btn waves-effect waves-light' do %>
          <%= t('.sign_up') %>
          <i class="material-icons">person_add</i>
        <% end %>
      <% end %>
    </div>

    <div class="card-action">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
